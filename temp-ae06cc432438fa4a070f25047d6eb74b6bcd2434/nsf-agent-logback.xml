<configuration>

    <conversionRule conversionWord="clr" converterClass="com.netease.cloud.nsf.agent.log.LogColorConverter" />
    <conversionRule conversionWord="wex" converterClass="com.netease.cloud.nsf.agent.log.WhitespaceThrowableProxyConverter" />
    <conversionRule conversionWord="wEx" converterClass="com.netease.cloud.nsf.agent.log.ExtendedWhitespaceThrowableProxyConverter" />

    <property name="CONSOLE_LOG_PATTERN" value="${CONSOLE_LOG_PATTERN:-%clr(%d{${LOG_DATEFORMAT_PATTERN:-yyyy-MM-dd HH:mm:ss.SSS}}){faint} %clr(${LOG_LEVEL_PATTERN:-%5p}) %clr(${PID:- }){magenta} %clr(---){faint} %clr([%15.15t]){faint} %clr(%-40.40logger{39}){magenta} %clr(:){faint} %m%n${LOG_EXCEPTION_CONVERSION_WORD:-%wEx}}"/>
    <root level="info">
    </root>
</configuration>
